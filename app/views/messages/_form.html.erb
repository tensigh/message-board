<%= form_for(@message, html: { class: "form-horizontal" }) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do 
|full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
   <div class="form-group">
    <label for="name" class="col-sm-2 control-label">名前:</label>
    <div class="col-sm-10">
     <%= f.text_field :name, :size => "22", :maxlength => "20" %>
    </div>
   </div>
   <div class="form-group">
    <label for="body" class="col-sm-2 control-label">内容:</label>   
    <div class="col-sm-10">
     <%= f.text_area :body, :size => "35x1", :maxlength => "30" %>
    </div>
   </div>
   <div class="form-group">
    <div class="col-sm-10">
     <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
   </div>
<% end %>
